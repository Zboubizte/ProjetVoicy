<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ceri.m1ilsen.applicationprojetm1.ui.DoExerciseActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textExercice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30sp"
            android:gravity="center"
            android:text="  5/52 \n Le chat miaule"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/recordingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textExercice"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="41dp"
            android:background="@drawable/ic_recording_red"
            app:srcCompat="@drawable/micro1" />

        <TextView
            android:id="@+id/nextWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/recordingButton"
            android:layout_marginTop="34dp"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/leaveExerciseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nextWord"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:background="@drawable/custom_list"
            android:text="Quitter l'exercice"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="24sp" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>